<h1 class="small"> <%= @workout.name%> </h1>

<h2> <%=@workout.date%></h2>
<br>
<h2 class="blueish">Exercises</h2>

<ul>
  <% @workout.exercises.each do |exercise| %>
  <li class="standard"><a href="/exercises/<%=exercise.id%>"><%= exercise.name%></a> </li>
  <% end%>
</ul>
<br>
<h2 class="blueish">Options</h2>
<button type="button" name="button"><a href="/exercises/new">Add Exercise</a></button>
<button type="button" name="button"><a href="/workouts/<%= @workout.id %>/edit">Edit Workout</a></button>
<button><form method="post" action="/workouts/<%= @workout.id %>/delete">
   <input id="hidden" type="hidden" name="_method" value="DELETE">
   <input type="submit" value="Delete Workout">
</form> </button>
<button type="button" name="button"><a href="/workouts">Workout Index</a></button>
<br>