<h1 class="small">Edit Your Exercise</h1>
<h2 class="blueish">Input Changes:</h2>

<form action="/exercises/<%= @exercise.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <li class="standard"><label>Revised Exercise Name: </label>
  <input type="text" value="<%=@exercise.name %>" name="name"> </br> </li>
  <li class="standard"><label>Revised Exercise Weight: </label>
  <input type="number" value="<%=@exercise.weight %>" name="weight"> </br></li>
  <li class="standard"><label>Revised Exercise Sets: </label>
  <input type="number" value="<%=@exercise.sets %>" name="sets"> </br></li>
  <li class="standard"><label>Revised Exercise Reps: </label>
  <input type="number" value="<%=@exercise.reps %>" name="reps"> </br></li>

  <li class="standard"><label><u><b>Revised Associated Workout</u></b>: </label>
  <select name="workout_id">
    <% current_user.workouts.each do |workout| %>
      <option value=<%=workout.id %>><%= workout.name %></option>
    <% end %>
  </select></li>
  <br>
  <button type="submit" class="popping">Update</button>
</form>
<br> 
  <div class="error"
    <div class="flash_alert">
      <% if flash[:alert] %>
      <%= flash[:alert] %>
      <% end %>
    </div>
 <button class="popping" type="button" name="button"><a class="simple" href="/workouts/<%= @exercise.workout_id %>">Back to Workout</a></button>